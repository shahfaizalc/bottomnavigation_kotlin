<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainDataModel"
            type="com.reelme.app.viewmodel.ReelDailyBonusMobileViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.reelme.app.model2.BonusTopics" />

        <variable
            name="countriesInfoModel2"
            type="com.reelme.app.model2.BonusTopics" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.reelme.app.adapter.ReelDailyBonusAdapter" />

        <variable
            name="itemClickListener"
            type="com.reelme.app.listeners.ReelDailyBonusReelsEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />

        <variable
            name="postDate"
            type="java.lang.String" />
        <variable
            name="dailyReelItemVisible"
            type="java.lang.Integer" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}">


        <LinearLayout
            android:id="@+id/fliplayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_8"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_weight="4"
                android:background="@drawable/group_1355">

                <TextView
                    android:id="@+id/titledaily1"
                    android:text="@{countriesInfoModel.topicDescription}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titledaily1"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/futurastdbold"
                    android:text="@{Integer.toString(countriesInfoModel.points)}"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@android:drawable/btn_star"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:textColor="@color/white" />

                <TextView
                    app:touchListener="@{countriesInfoModel}"
                    app:appcontext="@{mainDataModel}"
                    app:drawableStartCompat="@drawable/ic_swipe_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:drawablePadding="@dimen/dimen_4"
                    android:fontFamily="@font/futubk"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_24"
                    android:text="@string/swipe_to_record"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/progressprofile1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_48"
                android:layout_marginEnd="@dimen/dimen_48"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/group782" />

            <RelativeLayout
                android:visibility="@{dailyReelItemVisible}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_8"
                android:layout_weight="4"
                android:background="@drawable/group_1355">

                <TextView
                    android:text="@{countriesInfoModel2.topicDescription}"
                    android:id="@+id/titleadv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(countriesInfoModel.points)}"
                    android:layout_below="@+id/titleadv1"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@android:drawable/btn_star"
                    android:padding="@dimen/dimen_16"
                    android:textColor="@color/white" />


                <TextView
                    app:drawableEndCompat="@drawable/ic_swipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:drawablePadding="@dimen/dimen_4"
                    android:fontFamily="@font/futubk"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_24"
                    app:touchListener="@{countriesInfoModel2}"
                    app:appcontext="@{mainDataModel}"
                    android:text="@string/swipe_to_record"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>


        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />
    </FrameLayout>

</layout>
