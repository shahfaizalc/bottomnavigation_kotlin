<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.VerifyMobileViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/dimen_48"
                android:textSize="@dimen/dimen_32"
                android:padding="@dimen/dimen_16"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_verifyMobileTitle"
                 />

            <TextView
                android:paddingStart="@dimen/dimen_16"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_verifyMobileSubTitle"
                />

        <TextView
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_16"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={homeData.ideaTitle}"/>

        <EditText
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_36"
            android:padding="@dimen/dimen_16"
            android:textColorHint="@color/colorBlacklight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing=".5"
            android:maxLength="6"
            android:inputType="phone"
            android:text="@={homeData.smsotp}"
            android:hint="000000"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="@dimen/dimen_16"
            android:textColor="@color/smoke2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_12"
            android:paddingBottom="@dimen/dimen_12"
            android:paddingStart="@dimen/dimen_28"
            android:paddingEnd="@dimen/dimen_28"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@drawable/button_black"
            android:onClick="@{() -> homeData.signUpUserClicked()}"
            android:text="Verify ->" />

        <TextView
            android:layout_margin="@dimen/dimen_20"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND CODE"
            android:onClick="@{() -> homeData.resendClicked()}"

            />

 </LinearLayout>
     <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{homeData.progressBarVisible}" />
    </FrameLayout>

</layout>