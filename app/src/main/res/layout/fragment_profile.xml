<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homeData"
            type="com.faizal.bottomnavigation.viewmodel.ProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradiant_violet"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_8"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_16">


        <LinearLayout
            android:background="@drawable/circular_bg_border_smoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:weightSum="5"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/account_edit"
                android:gravity="center_horizontal"
                android:onClick="@{() -> homeData.findClickded()}"
                android:padding="@dimen/dimen_8"
                android:text="Edit Account"
                android:textSize="@dimen/dimen_8"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/forum"
                android:gravity="center_horizontal"
                android:onClick="@{() -> homeData.myDiscussionsClicked()}"
                android:padding="@dimen/dimen_8"
                android:text="My Discussions"
                android:textSize="@dimen/dimen_8"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/help_circle"
                android:gravity="center_horizontal"
                android:onClick="@{() -> homeData.findClickded()}"
                android:padding="@dimen/dimen_8"
                android:text="Help"
                android:textSize="@dimen/dimen_8"
                android:textStyle="bold" />

            <TextView
                android:text="Information"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="@dimen/dimen_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> homeData.findClickded()}"
                android:padding="@dimen/dimen_8"
                android:drawableTop="@drawable/information" />


            <TextView
                android:textSize="@dimen/dimen_8"
                android:textStyle="bold"
                android:text="Settings"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> homeData.findClickded()}"
                android:padding="@dimen/dimen_8"
                android:drawableTop="@drawable/settings" />

        </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/circular_bg_white"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.faizal.bottomnavigation.utils.ImageViewRounded
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        app:imageUrl="@{homeData.imgUrl}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@={homeData.userName}"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@={homeData.userEmail}"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="userId"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@={homeData.userPhone}"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/dimen_4"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/circular_bg_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Title"
                        android:textColor="@color/darkBlue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={homeData.userTitle}"
                        android:textColor="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/circular_bg_white"
                    android:layout_marginBottom="@dimen/dimen_4"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Address"
                        android:textColor="@color/darkBlue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={homeData.userAddress}"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_bg_white"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Course"
                        android:textColor="@color/darkBlue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={homeData.keywords}"
                        android:textColor="@color/black" />
                </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="@drawable/circular_bg_red"
                android:onClick="@{() -> homeData.logout()}"
                android:padding="@dimen/dimen_8"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</layout>