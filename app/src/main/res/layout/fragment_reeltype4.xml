<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.ReelTypeMobileViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_16"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="9">


            <RelativeLayout
                android:id="@+id/swipeDaily2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/group_1355">

                <TextView
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center_vertical"
                    android:id="@+id/swipeDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:drawableStart="@drawable/ic_swipe_2"
                    android:padding="@dimen/dimen_16"
                    android:text="@string/swipe_to_select"
                    android:textColor="@color/white" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/swipeDaily1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:text="Daily\nBonus\nReels"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_36" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/progressprofile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen_48"
                android:layout_marginEnd="@dimen/dimen_48"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/group782" />

            <RelativeLayout

                android:id="@+id/swipeAdventures"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/group_1355">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:text="Choose\nYour\nAdventures"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_36" />

                <TextView
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:text="@string/swipe_to_select"
                    android:padding="@dimen/dimen_16"
                    android:drawableEnd="@drawable/ic_swipe" />


            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{homeData.progressBarVisible}" />
    </FrameLayout>
</layout>