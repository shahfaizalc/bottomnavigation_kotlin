<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainDataModel"
            type="com.reelme.app.viewmodel.MyFollowingModel" />

        <variable
            name="countriesInfoModel"
            type="com.reelme.app.model_sales.goal.Record" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.reelme.app.adapter.MyFollowingAdapter" />

        <variable
            name="itemClickListener"
            type="com.reelme.app.listeners.MyFollowingEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />
        <variable
            name="postDate"
            type="java.lang.String" />

    </data>


    <androidx.cardview.widget.CardView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_4"
        app:cardBackgroundColor="@color/black"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.reelme.app.util.ImageViewRounded
                android:id="@+id/imgviewround"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:imageUrl="@{countriesInfoModel.priorityC}"
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/imgviewround"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/connectbtn"
                android:layout_margin="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/smoke2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.id}"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/smoke2"
                    android:id="@+id/likesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.name}"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/connectbtn"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginBottom="@dimen/dimen_16"
                android:layout_marginEnd="@dimen/dimen_4"
                android:background="@drawable/button_black_short"
                android:text="Connect"
                android:textColor="@color/smoke2" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
