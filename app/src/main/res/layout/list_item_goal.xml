<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainDataModel"
            type="com.reelme.app.viewmodel.GoalModel" />

        <variable
            name="countriesInfoModel"
            type="com.reelme.app.model_sales.goal.Record" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.reelme.app.adapter.GoalAdapter" />

        <variable
            name="itemClickListener"
            type="com.reelme.app.listeners.GoalEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />
        <variable
            name="postDate"
            type="java.lang.String" />


    </data>




    <androidx.cardview.widget.CardView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_4"
        app:cardBackgroundColor="@color/black"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.reelme.app.util.ImageViewRounded
                android:layout_weight="1"
                app:imageUrl="@{countriesInfoModel.priorityC}"
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/smoke2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.id}"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/smoke2"
                    android:id="@+id/likesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.name}"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_16"
                android:background="@drawable/button_black_short"
                android:text="Following"
                android:textColor="@color/smoke2" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
