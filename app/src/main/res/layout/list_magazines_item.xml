<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.akbhar.viewmodel.MagazineViewModel" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="videosTextView"
            type="java.lang.String" />

        <variable
            name="titleTextView"
            type="java.lang.String" />
        <variable
            name="titleCategoryTextView"
            type="java.lang.String" />

        <variable
            name="imgUrl"
            type="java.lang.String" />

        <variable
            name="imgUrlid"
            type="java.lang.Integer" />
        <variable
            name="typeTextView"
            type="java.lang.String" />

        <variable
            name="simpleListAdapter"
            type="com.guiado.akbhar.adapter.MagazineRecyclerViewAdapter" />


        <variable
            name="itemClickListener"
            type="com.guiado.akbhar.listeners.MagazineEventListener" />

    </data>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2"
        android:onClick="@{() -> itemClickListener.onClickYearListItem(mainDataModel,itemPosition)}"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:id="@+id/videoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{titleTextView}"
            android:layout_gravity="start"
            android:paddingTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_2"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold"
            android:textColor="@color/primary_text" />

        <TextView
            android:textSize="@dimen/dimen_12"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{titleCategoryTextView}"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/dimen_2"
            android:textColor="@color/colorGrey" />
    </LinearLayout>
</layout>