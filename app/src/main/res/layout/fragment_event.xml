<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.linkify.viewmodel.EventViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.guiado.linkify.model2.Events" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGreen">

            <LinearLayout
                android:background="@drawable/circular_bg_border_black_8"
                android:layout_margin="@dimen/dimen_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/dimen_8"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradiant_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@{countriesInfoModel.title}"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32" />

                    <TextView
                        android:linksClickable="true"
                        android:autoLink="web|email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:maxLines="7"
                        android:text="@{countriesInfoModel.description}"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textColor="@color/white_transparent_80" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="created by"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_marginStart="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="7"
                        android:text="@={countriesInfoModel.postedByName}"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/darkBlue"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/creationDate"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:layout_marginBottom="@dimen/dimen_8"
                            android:maxLines="7"
                            android:text="@={mainDataModel.postedDate}"
                            android:textAppearance="?android:attr/textAppearanceMediumInverse"
                            android:textColor="@color/colorBlacklight" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/members"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:layout_marginBottom="@dimen/dimen_8"
                            android:maxLines="7"
                            android:text="@{@string/group_members(countriesInfoModel.members!= null ? countriesInfoModel.members.size() : 0)}"
                            android:textAppearance="?android:attr/textAppearanceMediumInverse"
                            android:textColor="@color/colorBlacklight" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/dimen_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradiant_bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/calendar_range_small"
                            android:drawableTint="@color/white_transparent_80" />

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_8"
                            android:paddingRight="@dimen/dimen_8"
                            android:text="@={mainDataModel.adDate}"
                            android:textColor="@color/white" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/clock_outline_small"
                            android:drawableTint="@color/white_transparent_80" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="@dimen/dimen_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_8"
                            android:paddingRight="@dimen/dimen_8"
                            android:text="@{countriesInfoModel.eventTime}"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/map_marker"
                            android:drawableTint="@color/white_transparent_80"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_8"
                            android:paddingRight="@dimen/dimen_8"
                            android:text="@={mainDataModel.location}"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

 </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@{mainDataModel.bookmarkState ? @drawable/circular_bg_border_smoke : @drawable/circular_bg_border_smoke }"
            android:onClick="@{mainDataModel.updateBookmarks()}"
            android:padding="@dimen/dimen_4"
            android:text="@{mainDataModel.bookmarkState ? @string/remmoveFromCalender : @string/addtoCalender}"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@{mainDataModel.bookmarkState ? @color/darkBlue : @color/colorBlack  }"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>
