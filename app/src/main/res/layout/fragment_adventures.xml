<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.ReelAdventuresMobileViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fliplayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/scrollformore"
                android:layout_margin="@dimen/dimen_16"
                android:background="@color/black"
                android:orientation="vertical"
                android:weightSum="9">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/futubk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="5"
                        android:text="Choose Your Adventure"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_20"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:tint="@color/white"
                        android:gravity="center_vertical|end"
                        android:onClick="@{() -> homeData.customBackButton()}"
                        android:textStyle="bold"
                        app:srcCompat="@drawable/ic_arrow_back" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:layout_marginEnd="@dimen/dimen_24"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:id="@+id/swipeDaily2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@drawable/group_1355">

                    <TextView
                        android:id="@+id/titledaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:fontFamily="@font/futurastdbold"
                        android:lineSpacingExtra="@dimen/dimen_4"
                        android:padding="@dimen/dimen_16"
                        android:text="@{homeData.headline1title}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titledaily"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/futurastdbold"
                        android:lineSpacingExtra="@dimen/dimen_12"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@android:drawable/btn_star"
                        android:padding="@dimen/dimen_16"
                        android:text="@{homeData.headline1Points}"
                        android:textColor="@color/white" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/dimen_48"
                            android:drawablePadding="@dimen/dimen_4"
                            android:fontFamily="@font/futubk"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_16"
                            android:text="@string/swipe_to_record"
                            android:textColor="@color/white"
                            app:drawableStartCompat="@drawable/ic_swipe_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dimen_48"
                            android:fontFamily="@font/futurastdbold"
                            android:gravity="center_vertical"
                            android:onClick="@{() -> homeData.onTypeAClick()}"
                            android:padding="@dimen/dimen_16"
                            android:text="@string/home_skip"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/progressprofile"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dimen_48"
                    android:layout_marginEnd="@dimen/dimen_48"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/group782" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:layout_marginEnd="@dimen/dimen_24"
                    android:layout_marginBottom="@dimen/dimen_8"

                    android:id="@+id/swipeAdventures"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@drawable/group_1355">

                    <TextView
                        android:id="@+id/titleadv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:fontFamily="@font/futurastdbold"
                        android:lineSpacingExtra="@dimen/dimen_4"
                        android:padding="@dimen/dimen_16"
                        android:text="@{homeData.headline2title}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_20" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleadv"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/futurastdbold"
                        android:lineSpacingExtra="@dimen/dimen_12"
                        android:padding="@dimen/dimen_16"
                        android:text="@{homeData.headline2Points}"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@android:drawable/btn_star" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/dimen_48"
                            android:fontFamily="@font/futurastdbold"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_16"
                            android:onClick="@{() -> homeData.onTypeBClick()}"
                            android:text="@string/home_skip"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dimen_48"
                            android:drawablePadding="@dimen/dimen_4"
                            android:fontFamily="@font/futubk"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_16"
                            android:text="@string/swipe_to_record"
                            android:textColor="@color/white"
                            app:drawableEndCompat="@drawable/ic_swipe" />


                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:visibility="invisible"
                android:id="@+id/scrollformore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/futurastdbold"
                android:gravity="center"
                android:text="Scroll for more"
                android:textColor="@color/white" />

        </RelativeLayout>


        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{homeData.progressBarVisible}" />
    </FrameLayout>
</layout>