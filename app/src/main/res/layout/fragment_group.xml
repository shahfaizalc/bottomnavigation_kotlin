<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.grads.viewmodel.GroupViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.guiado.grads.model2.Groups" />

    </data>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_above="@+id/bottombutton"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:searchRecycler="@{mainDataModel}" />

        <RelativeLayout
            android:id="@+id/bottombutton"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bg_border_paleblue"
            android:layout_margin="@dimen/dimen_8">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_toLeftOf="@+id/postReview"
                android:background="@android:color/transparent"
                android:hint="@string/cooment_hint"
                android:padding="@dimen/dimen_12"
                android:text="@={mainDataModel.review}" />

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/postReview"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/send"
                android:tint="@color/paleGreen"
                android:onClick="@{mainDataModel.updateReview()}"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
