<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.faizal.bottomnavigation.viewmodel.GroupViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.faizal.bottomnavigation.model2.Groups" />

    </data>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view:contentPadding="@dimen/dimen_8"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/dimen_4"
            card_view:cardElevation="@dimen/dimen_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={countriesInfoModel.postedByName}"
                        android:textColor="@color/colorBlacklight"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={mainDataModel.postedDate}" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/dimen_4"
                    android:layout_gravity="end"
                    android:drawableTint="@color/grey"
                    android:drawableLeft="@drawable/tag"
                    android:text="@={mainDataModel.keyWordsTagg}"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"

                    android:maxLines="7"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.title}"
                    android:textColor="@color/colorBlacklight"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8">

                    <TextView
                        android:id="@+id/likethumb"
                        android:padding="@dimen/dimen_4"
                        android:onClick="@{mainDataModel.updateLikes()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dimen_4"
                        android:background="@{mainDataModel.likesState ? @drawable/circular_bg_border_green : @drawable/circular_bg_border  }"
                        android:drawableLeft="@drawable/like"
                        android:textColor="@{mainDataModel.likesState ? @color/paleGreen : @color/colorGrey  }"
                        android:textStyle="bold"
                        android:text="@{Integer.toString(countriesInfoModel.likes.size())}" />

                    <TextView
                        android:layout_marginStart="@dimen/dimen_4"
                        android:layout_toEndOf="@+id/likethumb"
                        android:padding="@dimen/dimen_4"
                        android:onClick="@{mainDataModel.updateBookmarks()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dimen_4"
                        android:background="@{mainDataModel.bookmarkState ? @drawable/circular_bg_border_green : @drawable/circular_bg_border  }"
                        android:drawableStart="@{mainDataModel.bookmarkState ? @drawable/bookmark_green : @drawable/bookmark  }"
                        android:textColor="@{mainDataModel.bookmarkState ? @color/paleGreen : @color/colorGrey  }"
                        android:textStyle="bold"
                        android:text="@{mainDataModel.bookmarkState ? @string/saved : @string/save}" />



                    <TextView
                        android:onClick="@{mainDataModel.addFollowers()}"
                        android:padding="@dimen/dimen_4"
                        android:background="@{mainDataModel.sponsored ? @drawable/circular_bg_border_green : @drawable/circular_bg_border }"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textColor="@{mainDataModel.sponsored ? @color/paleGreen : @color/colorGrey }"
                        android:text="@{mainDataModel.sponsored ? @string/following : @string/follow}"
                        />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_above="@+id/bottombutton"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_below="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:searchRecycler="@{mainDataModel}" />

        <RelativeLayout
            android:id="@+id/bottombutton"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bg_border_green"
            android:layout_margin="@dimen/dimen_8">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_toLeftOf="@+id/postReview"
                android:background="@android:color/transparent"
                android:hint="@string/cooment_hint"
                android:padding="@dimen/dimen_12"
                android:text="@={mainDataModel.review}" />

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/postReview"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/send"
                android:tint="@color/paleGreen"
                android:onClick="@{mainDataModel.updateReview()}"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
