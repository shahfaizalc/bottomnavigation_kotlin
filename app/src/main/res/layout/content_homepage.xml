<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homePageModel"
            type="com.faizal.bottomnavigation.viewmodel.HomePageModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorSkyBlue"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_16"
                android:text="@string/app_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimen_32"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addsubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:background="@color/colorWhite"
                android:drawableStart="@drawable/magnify"
                android:drawablePadding="@dimen/dimen_4"
                android:gravity="start|center_vertical"
                android:onClick="@{homePageModel.onAdSearchViewClick}"
                android:text="Search and Buy"
                android:textAllCaps="false"
                android:textColor="@color/colorGrey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:layout_weight="1"
                android:background="@drawable/button_borderr"
                android:gravity="center_horizontal"
                android:onClick="@{homePageModel.onMyAdsClick}"
                android:paddingStart="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_32"
                android:text="My Ads"
                android:textColor="@color/colorBlacklight"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:layout_weight="1"
                android:background="@drawable/button_borderr"
                android:gravity="center_horizontal"
                android:onClick="@{homePageModel.onPostAdClick}"
                android:paddingStart="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_32"
                android:text="Post Ad"
                android:textColor="@color/colorBlacklight"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:layout_weight="1"
                android:background="@drawable/button_borderr"
                android:gravity="center_horizontal"
                android:onClick="@{homePageModel.onProfileClick}"
                android:paddingStart="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_32"
                android:text="Profile"
                android:textColor="@color/colorBlacklight"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#5DADE2">

        </LinearLayout>

    </LinearLayout>

</layout>

