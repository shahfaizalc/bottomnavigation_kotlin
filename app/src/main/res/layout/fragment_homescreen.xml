<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.HomescreenViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_20"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/applogocoloroutline"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/dimen_48"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_margin="@dimen/dimen_4"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Home..."
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/b_black"
                android:layout_margin="@dimen/dimen_4"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> homeData.signOffClicked()}"
                android:text="LogOut"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="@dimen/dimen_4"
                android:textSize="@dimen/dimen_16"
                android:background="@drawable/b_black"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> homeData.signInUserClicked()}"
                android:text="demography"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="@dimen/dimen_4"
                android:background="@drawable/b_black"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> homeData.signUpUserClicked()}"
                android:text="delete account"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/b_black"
                android:layout_margin="@dimen/dimen_4"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> homeData.signEditUserClicked()}"
                android:text="Edit Profile"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/b_black"
                android:layout_margin="@dimen/dimen_4"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> homeData.signUserprofileClicked()}"
                android:text="User Profile"
                />

        </LinearLayout>
    </LinearLayout>
</layout>