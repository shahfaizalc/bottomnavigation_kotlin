<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="postAdViewData"
            type="com.guiado.grads.viewmodel.PostAdViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ad Title"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Blue star cricket tournament"
                    android:maxLines="70"
                    android:text="@={postAdViewData.title}"
                    android:textColor="@color/colorBlacklight"
                    android:textColorHint="@color/colorSmoke" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="Description"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prize and other information"
                    android:maxLength="240"
                    android:text="@={postAdViewData.description}"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSmoke" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:drawableEnd="@drawable/calendar_range"
                    android:focusable="false"
                    android:onClick="@{postAdViewData.datePickerClick() }"
                    android:hint="@string/defaultDate"
                    android:text="@{postAdViewData.showDate}"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:drawableEnd="@drawable/clock_outline"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:onClick="@{postAdViewData.timePickerClick()}"
                    android:hint="@string/defaultTime"
                    android:text="@{postAdViewData.showTime}"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/ad_notification"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dimen_32"
            android:background="@color/yellow"
            android:onClick="@{postAdViewData.onNextButtonClick}"
            android:text="NEXT"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>