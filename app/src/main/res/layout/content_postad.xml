<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="postAdViewData"
            type="com.faizal.bottomnavigation.viewmodel.PostAdViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="@string/category"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    app:adapterFlex="@{postAdViewData}" />


                <!--<Spinner-->
                    <!--android:id="@+id/gender_spinner"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dimen_16"-->
                    <!--android:background="@color/colorSmoke"-->
                    <!--android:selectedItemPosition="@{postAdViewData.itemPositionCategory}"-->
                    <!--app:category_array="@{postAdViewData}" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="Ad Title"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="70"
                    android:hint="Avengers 2 tickets"
                    android:textColorHint="@color/colorSmoke"
                    android:text="@={postAdViewData.title}"
                    android:textColor="@color/colorBlacklight"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="Description"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="70"
                    android:text="@={postAdViewData.description}"
                    android:hint="Special show. Balcony ticket. PVR cinemas"
                    android:textColorHint="@color/colorSmoke"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="Show Date"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/calendar_range"
                    android:focusable="false"
                    android:onClick="@{postAdViewData.datePickerClick()}"
                    android:text="@{postAdViewData.showDate}"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="Show Time"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/clock_outline"
                    android:focusable="false"
                    android:onClick="@{postAdViewData.timePickerClick()}"
                    android:text="@{postAdViewData.showTime}"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="Your ad will stay online during the date and time indicated above or until you remove it. If you sold the item, kindly delete the ad"
                    android:textColor="@color/colorBlack" />


            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dimen_32"
            android:background="@color/yellow"
            android:onClick="@{postAdViewData.onNextButtonClick}"
            android:text="NEXT"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>