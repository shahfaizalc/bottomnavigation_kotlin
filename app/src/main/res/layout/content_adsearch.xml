<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adSearchModel"
            type="com.faizal.bottomnavigation.viewmodel.AdSearchModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSkyBlue"
        android:orientation="vertical">

        <android.support.v7.widget.SearchView
            app:searchRecycler="@{recylerView}"
            app:serachAdapter="@{adSearchModel}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="@color/colorWhite"
            android:focusable="false"
            app:queryHint="Enter search text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_16"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:drawableEnd="@drawable/calendar_range"
                android:focusable="false"
                android:hint="Event date"
                android:onClick="@{adSearchModel.datePickerClick()}"
                android:padding="@dimen/dimen_8"
                android:text="@{adSearchModel.showDate}"
                android:textColor="@color/colorBlack" />

            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_4"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:hint="City/Near City"
                android:maxLines="70"
                android:padding="@dimen/dimen_8"
                android:text="@={adSearchModel.city}"
                android:textColor="@color/colorBlack"
                app:autoAdapter="@{adSearchModel}" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@color/colorWhite"
            android:onClick="@{adSearchModel.searchAdClick()}"
            android:text="Search"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dimen_8"
            android:id="@+id/recylerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8"
            android:scrollbars="vertical" />

    </LinearLayout>


</layout>