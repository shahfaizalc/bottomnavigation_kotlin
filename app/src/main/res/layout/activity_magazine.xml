<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="imgUrl"
            type="java.lang.String" />

        <variable
            name="profileData"
            type="com.guiado.akbhar.viewmodel.MagazineViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_4"
                        android:text="Editorials"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/dimen_24"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:background="@color/smoke2"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            app:recyclerChannelEditorial="@{profileData}" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/banner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:gravity="bottom"
                        android:orientation="vertical" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/bottom_line" />

                    <TextView
                        android:id="@+id/recylerView1Title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_4"
                        android:text="@string/magazines"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/dimen_24"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_8">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            app:recyclerChannelComedy="@{profileData}" />

                    </RelativeLayout>


                </LinearLayout>

            </FrameLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>