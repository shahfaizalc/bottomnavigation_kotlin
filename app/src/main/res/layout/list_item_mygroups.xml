<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mainDataModel"
            type="com.faizal.bottomnavigation.viewmodel.MyGroupsModel" />

        <variable
            name="groupsViewModel"
            type="com.faizal.bottomnavigation.model2.Groups" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.faizal.bottomnavigation.adapter.MyGroupsAdapter" />

        <variable
            name="itemClickListener"
            type="com.faizal.bottomnavigation.listeners.MyGroupsEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />

        <variable
            name="postDate"
            type="java.lang.String" />


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12"
        android:background="@drawable/circular_bg_border_smoke"
        android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}">

        <TextView
            android:id="@+id/titleLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:text="@{@string/group_members(groupsViewModel.title.charAt(0))}"
            android:textColor="@color/colorBlacklight"
            android:textSize="@dimen/dimen_48" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/titleLetter"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{groupsViewModel.title}"
                android:textSize="@dimen/dimen_24"
                android:textColor="@color/colorBlacklight" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{groupsViewModel.description}"
                android:textColor="@color/colorGrey" />

        </LinearLayout>
    </RelativeLayout>
</layout>
