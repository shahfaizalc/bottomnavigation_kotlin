<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:padding="@dimen/dimen_16"
                    android:text="@string/home_relationshipTitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_32"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/flights_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:background="@drawable/button_black"
                    android:paddingStart="@dimen/dimen_28"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_28"
                    android:paddingBottom="@dimen/dimen_12"
                    android:drawablePadding="@dimen/dimen_4"
                    android:drawableEnd="@drawable/ic_rightarrow"
                    android:text="Next"
                    android:textColor="@color/smoke2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16"
                    android:text="@string/home_genderSubTitle2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/skipBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:layout_marginBottom="@dimen/dimen_32"
                    android:paddingStart="@dimen/dimen_16"
                    android:text="@string/home_skip"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="invisible" />
        </FrameLayout>
    </ScrollView>
</layout>