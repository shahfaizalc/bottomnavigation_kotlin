<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dimen_48"
            android:textSize="@dimen/dimen_32"
            android:padding="@dimen/dimen_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_relationshipTitle"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flights_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/button_black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingStart="@dimen/dimen_28"
                android:paddingEnd="@dimen/dimen_28"
                android:text="Next ->"
                android:textColor="@color/smoke2" />

        <TextView
            android:textSize="@dimen/dimen_12"
            android:padding="@dimen/dimen_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_genderSubTitle2"/>
      <TextView
                    android:layout_marginTop="@dimen/dimen_32"
                    android:layout_marginBottom="@dimen/dimen_32"
                    android:id="@+id/skipBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_16"
                    android:text="@string/home_skip"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />
</FrameLayout>
    </ScrollView>
</layout>