<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.faizal.guiado.listeners.ChooserEventListener" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="gameChooserModel"
            type="com.faizal.guiado.viewmodel.GameChooserModel" />
    </data>

        <FrameLayout
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_8"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradiant_blue"
            android:onClick="@{() -> listener.onClickAdSearchListItem(gameChooserModel,itemPosition)}">

            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white_transparent_80"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/userText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/check"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold"
                android:tint="@color/white_transparent_80" />

        </FrameLayout>

</layout>
