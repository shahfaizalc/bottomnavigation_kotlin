                <!--                android:paddingBottom="@dimen/dimen_20"-->
                <!--                android:layout_marginRight="@dimen/dimen_16"-->
                <!--                android:background="@drawable/circular_bg_blue_8"-->
                <!--                android:onClick="@{() -> homeData.signUpUserClicked()}"-->
                <!--                android:text="@string/signUpText"-->
                <!--                android:textStyle="bold" />-->

                <!--            <Button-->
                <!--                android:textColor="@color/smoke2"-->
                <!--                android:paddingTop="@dimen/dimen_20"-->
                <!--                android:paddingBottom="@dimen/dimen_20"-->
                <!--                android:layout_weight="1"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginLeft="@dimen/dimen_16"-->
                <!--                android:layout_marginTop="@dimen/dimen_8"-->
                <!--                android:layout_marginRight="@dimen/dimen_16"-->
                <!--                android:background="@drawable/circular_bg_blue_8"-->
                <!--                android:onClick="@{() -> homeData.signInUserClicked()}"-->
                <!--                android:text="Get Started"-->
                <!--                android:textStyle="bold" />-->
                <!--        </LinearLayout>-->
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="@{homeData.progressBarVisible}" />
        </FrameLayout>
    </ScrollView>
