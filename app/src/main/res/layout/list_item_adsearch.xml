<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.faizal.bottomnavigation.viewmodel.AdSearchModel" />

        <variable
            name="countriesInfoModel"
            type="com.faizal.bottomnavigation.model.PostAdModel" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.faizal.bottomnavigation.adapter.AdSearchRecyclerViewAdapter" />

        <variable
            name="itemClickListener"
            type="com.faizal.bottomnavigation.listeners.AdSearchEventListener" />

        <variable
            name="priceActual"
            type="java.lang.String" />

        <variable
            name="priceDiscount"
            type="java.lang.String" />

        <variable
            name="priceTotal"
            type="java.lang.String" />

        <variable
            name="address"
            type="java.lang.String" />
        <variable
            name="balanceTicket"
            type="java.lang.String" />


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_8"
            card_view:cardBackgroundColor="@color/colorGreyLight"
            card_view:cardCornerRadius="@dimen/dimen_8"
            card_view:cardElevation="@dimen/dimen_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingEnd="@dimen/dimen_16"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:text="@{countriesInfoModel.title}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen_20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_8"
                    android:text="@{address}"
                    android:textColor="@color/colorBlacklight"
                    android:textSize="@dimen/dimen_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_4">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Show time"
                            android:textColor="@color/colorBlacklight"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/showDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@{countriesInfoModel.showDate}"
                            android:textColor="@color/colorBlacklight"
                            android:textSize="@dimen/dimen_24"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/showTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@{countriesInfoModel.showTime}"
                            android:textColor="@color/colorBlacklight"
                            android:textSize="@dimen/dimen_24" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_8"
                        android:paddingEnd="@dimen/dimen_8"
                        android:paddingBottom="@dimen/dimen_8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Price"
                            android:textColor="@color/colorBlacklight"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Actual"
                                android:textColor="@color/colorBlack" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@{priceActual}"
                                android:textColor="@color/colorGrey"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Discount"
                                android:textColor="@color/colorBlack" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@{priceDiscount}"
                                android:textColor="@color/colorGrey"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Offer Price"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@{priceTotal}"
                                android:textColor="@color/colorGrey"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorWhite"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_4"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_4"
                    android:text="@{countriesInfoModel.description}"
                    android:textColor="@color/colorBlacklight"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32"></View>

                <RelativeLayout
                    android:paddingTop="@dimen/dimen_12"
                    android:background="@color/colorSmoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@string/ticketAvailability"
                        android:textSize="@dimen/dimen_16"
                        android:textColor="@color/colorBlacklight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text='@{!balanceTicket.equalsIgnoreCase("0")? balanceTicket : @string/soldout}'
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>
