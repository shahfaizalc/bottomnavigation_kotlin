<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.grads.viewmodel.ActivityMyDiscussionViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.guiado.grads.model2.PostDiscussion" />

    </data>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_4"
            card_view:cardCornerRadius="@dimen/dimen_4"
            card_view:cardElevation="@dimen/dimen_12">

            <LinearLayout
                android:padding="@dimen/dimen_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={countriesInfoModel.postedByName}"
                        android:textColor="@color/colorBlacklight"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={mainDataModel.postedDate}" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/dimen_4"
                    android:layout_gravity="end"
                    android:drawableTint="@color/grey"
                    android:drawableLeft="@drawable/tag"
                    android:text="@={mainDataModel.keyWordsTagg}"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"

                    android:maxLines="7"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.title}"
                    android:textColor="@color/colorBlacklight"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8">

                    <Button
                        android:enabled="@{(countriesInfoModel.eventState.ordinal() &lt; 2)}"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_width="wrap_content"
                        android:padding="@dimen/dimen_4"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:background="@{(countriesInfoModel.eventState.ordinal() &lt; 1) ? @drawable/circular_bg_border_smoke:@drawable/circular_bg_border_disable}"
                        android:onClick="@{mainDataModel.hideBookmmarks()}"
                        android:text="@{(countriesInfoModel.eventState.ordinal() &lt; 1) ? @string/hide : @string/unhide}"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold" />

                    <Button
                        android:enabled="@{(countriesInfoModel.eventState.ordinal() &lt; 2)}"
                        android:layout_width="wrap_content"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:padding="@dimen/dimen_4"
                        android:background="@{(countriesInfoModel.eventState.ordinal() &lt; 2) ? @drawable/circular_bg_border_smoke:@drawable/circular_bg_border_disable}"
                        android:onClick="@{mainDataModel.deleteBookmmarks()}"
                        android:text="@{(countriesInfoModel.eventState.ordinal() &lt; 2) ? @string/delete : @string/deleted}"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

       <TextView
            android:layout_below="@+id/card_view"
            android:id="@+id/emptyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/start_chatting" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/card_view"
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:clipToPadding="false"
            tools:listitem="@layout/message" />

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bg_border_paleblue"
            android:layout_margin="@dimen/dimen_4">

            <EditText
                android:id="@+id/messageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_toStartOf="@+id/sendButton"
                android:background="@android:color/transparent"
                android:hint="@string/message_hint"
                android:padding="@dimen/dimen_12" />

            <ImageButton
                android:enabled="@{(countriesInfoModel.eventState.ordinal() &lt; 2) ? true : false}"
                android:background="@android:color/transparent"
                android:src="@drawable/send"
                android:id="@+id/sendButton"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:tint="@{(countriesInfoModel.eventState.ordinal() &lt; 2) ? @color/paleGreen : @color/grey}"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>


