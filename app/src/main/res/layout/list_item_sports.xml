<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.akbhar.viewmodel.SportsViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.guiado.akbhar.model.Feed" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.guiado.akbhar.adapter.SportsAdapter" />

        <variable
            name="itemClickListener"
            type="com.guiado.akbhar.listeners.SportsEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />

        <variable
            name="postDate"
            type="java.lang.String" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dimen_16"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="@dimen/dimen_16">

            <LinearLayout
                android:padding="@dimen/dimen_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:onClick="@{() -> itemClickListener.launchNews(mainDataModel,itemPosition)}"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@{countriesInfoModel.newsprovider}"
                        android:textColor="@color/colorBlacklight" />

                    <TextView
                        android:layout_toStartOf="@+id/shareimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_4"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@{countriesInfoModel.date}"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimen_12" />

                    <ImageView
                        android:src="@drawable/share_variant"
                        android:id="@+id/shareimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/dimen_4"
                        android:onClick="@{() -> itemClickListener.launchShare(mainDataModel,itemPosition)}"
                        android:paddingEnd="@dimen/dimen_4"
                        android:paddingBottom="@dimen/dimen_4" />


                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4"
                    android:autoLink="web|email"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="2"
                    android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}"
                    android:text="@{countriesInfoModel.title}"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimen_20" />

                <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{countriesInfoModel.imgurl}"
                        app:layout_constraintDimensionRatio="H,16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4"
                    android:autoLink="web|email"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="2"
                    android:onClick="@{() -> itemClickListener.onClickAdSearchListItem(mainDataModel,itemPosition)}"
                    android:text="@{countriesInfoModel.brief}"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
