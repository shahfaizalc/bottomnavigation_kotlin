<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="adSearchModel"
            type="com.guiado.akbhar.viewmodel.MyGroupsModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/search1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/circular_bg_red"
                    android:onClick="@{adSearchModel.doFindGroups2}"
                    android:padding="@dimen/dimen_12"
                    android:text="Morocco"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/circular_bg_border_black_8"
                    android:onClick="@{adSearchModel.doFindGroups2}"
                    android:padding="@dimen/dimen_12"
                    android:text="World"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/coronaState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/circular_bg_white"
                    android:padding="@dimen/dimen_12"
                    android:text="Find a Group"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/circular_bg_white"
                    android:padding="@dimen/dimen_12"
                    android:text="Find a Group"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/death"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:background="@drawable/circular_bg_white"
                    android:padding="@dimen/dimen_12"
                    android:text="Find a Group"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:background="@drawable/bottom_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8"
                android:text="My Groups"

                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_4"
                android:layout_marginEnd="@dimen/dimen_4"
                android:background="@android:color/transparent"
                android:scrollbars="vertical"
                app:searchRecycler="@{adSearchModel}" />


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="@{adSearchModel.onNextButtonClick}"
            android:tint="@color/white"
            app:backgroundTint="@color/colorPrimary"
            app:layout_anchor="@id/viewA"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/plus" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>