<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.akbhar.communication.HomeViewModel2" />

        <variable
            name="blogItemModel"
            type="com.guiado.akbhar.communication.ClubsModel2" />

        <variable
            name="itemPosition"
