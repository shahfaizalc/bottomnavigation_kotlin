<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.faizal.guiado.viewmodel.NewEventViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ScrollView
            android:layout_marginBottom="@dimen/dimen_48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16">

                <TextView
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/orange"
                    android:textStyle="bold"/>

                <EditText
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_8"
                    android:hint="@string/event_title"
                    android:text="@={homeData.userTitle}"/>

                <TextView
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_desc"
                    android:textColor="@color/orange"
                    android:textStyle="bold"/>

                <EditText
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingBottom="@dimen/dimen_8"
                    android:text="@={homeData.userDesc}"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:drawableEnd="@drawable/calendar_range"
                    android:focusable="false"
                    android:onClick="@{homeData.datePickerClick() }"
                    android:hint="@string/defaultDate"
                    android:text="@{homeData.showDate}"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:drawableEnd="@drawable/clock_outline"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:onClick="@{homeData.timePickerClick()}"
                    android:hint="@string/defaultTime"
                    android:text="@{homeData.showTime}"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expiryDate"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:drawableEnd="@drawable/calendar_range"
                    android:focusable="false"
                    android:onClick="@{homeData.expiryDatePickerClick() }"
                    android:hint="@string/defaultDate"
                    android:text="@{homeData.expiryDate}"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:layout_height="wrap_content"
                    android:onClick="@{homeData.updateAddress()}"
                    android:paddingBottom="@dimen/dimen_16"
                    android:text="@{homeData.userAddress}"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary_text" />


            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/yellow"
            android:onClick="@{homeData.doPostEvents()}"
            android:padding="@dimen/dimen_8"
            android:src="@drawable/check_circle_outline"
            android:text="@string/event_create"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>