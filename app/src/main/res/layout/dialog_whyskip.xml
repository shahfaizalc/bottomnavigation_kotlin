<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="@dimen/dimen_24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/group_1355"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dimen_16"
            android:id="@+id/titletandc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/futurabold"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:textSize="@dimen/dimen_16"
            android:text="why do you want to skip this topic?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/share_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_12"
            android:background="@drawable/button_black"
            android:fontFamily="@font/futurabold"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:text="I don\'t want to answer this right now"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/share_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_12"
            android:background="@drawable/button_black"
            android:fontFamily="@font/futurabold"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:text="This doesn\'t apply to me"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dimen_16"/>


    </LinearLayout>

</LinearLayout>