<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.UsernameViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@color/black"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:padding="@dimen/dimen_16"
                    android:text="@string/home_usernameTitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_32"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:text="@string/home_userSubTitle"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:hint="@string/home_userSubTitle2"
                        android:text="@={homeData.userName}"
                        android:textColor="@color/white"
                        android:textColorHint="@color/colorBlacklight"
                        android:textSize="@dimen/dimen_36"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="@={homeData.userNameLength}"
                        android:textColor="@color/colorBlacklight"
                        android:textSize="@dimen/dimen_16"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:hint="@string/home_userSubTitle2"
                    android:text="@={homeData.userName}"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorBlacklight"
                    android:textSize="@dimen/dimen_36" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:hint="@string/home_userSubTitle3"
                    android:textColorHint="@color/colorBlacklight" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:background="@drawable/button_black"
                    android:onClick="@{() -> homeData.signUpUserClicked()}"
                    android:paddingStart="@dimen/dimen_28"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_28"
                    android:paddingBottom="@dimen/dimen_12"
                    android:text="NEXT ->"
                    android:textColor="@color/smoke2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:visibility="@{homeData.skipVisibility}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> homeData.onSkipButtonClicked()}"
                    android:paddingStart="@dimen/dimen_16"
                    android:text="@string/home_skip"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{homeData.progressBarVisible}" />
    </FrameLayout>
</layout>