<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.UsernameViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:weightSum="12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="@dimen/dimen_32"
                android:textSize="@dimen/dimen_32"
                android:padding="@dimen/dimen_16"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_usernameTitle"
                 />

            <TextView
                android:layout_marginStart="@dimen/dimen_16"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_userSubTitle"
                />

        <TextView
            android:layout_marginTop="@dimen/dimen_16"
            android:textSize="@dimen/dimen_36"
            android:layout_marginStart="@dimen/dimen_16"
            android:textColorHint="@color/colorBlacklight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/home_userSubTitle2"/>

        <TextView
            android:layout_marginStart="@dimen/dimen_16"
            android:textColorHint="@color/colorBlacklight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/home_userSubTitle3"/>

        <Button
            android:layout_marginTop="@dimen/dimen_16"
            android:textColor="@color/smoke2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_20"
            android:paddingEnd="@dimen/dimen_32"
            android:paddingStart="@dimen/dimen_32"
            android:paddingBottom="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@drawable/button_black"
            android:onClick="@{() -> homeData.signUpUserClicked()}"
            android:text="NEXT ->" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:paddingStart="@dimen/dimen_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_skip" />

    </LinearLayout>

    </LinearLayout>
</layout>