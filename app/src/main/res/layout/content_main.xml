<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_8"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mainn">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_bg_border_black"
        android:hint="Write a description..."
        android:padding="@dimen/dimen_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/postDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@drawable/circular_bg_border_black"
        android:drawableEnd="@drawable/calendar_range"
        android:focusable="false"
        android:hint="@string/defaultDate"
        android:padding="@dimen/dimen_12"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/uploadPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/com_facebook_button_background"
        android:padding="@dimen/dimen_12"
        android:text="Post It"
        android:textColor="@color/white_transparent_80"
        android:textStyle="bold" />

</LinearLayout>