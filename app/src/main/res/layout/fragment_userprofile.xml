<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.UserProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/dimen_16"-->
<!--                    android:text="Edit Your Demographics"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/dimen_20"-->
<!--                    android:textStyle="bold" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toStartOf="@+id/divider3"
                        android:layout_centerVertical="true"
                        android:text="233k\nFollowers"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"/>

                    <com.reelme.app.util.ImageViewRounded
                        android:id="@+id/divider3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:background="@drawable/roundedbg"
                        android:gravity="center"
                        android:src="@drawable/profilepic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toEndOf="@+id/divider3"
                        android:layout_centerVertical="true"
                        android:text="233k\nFollowing"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Profile Completed 100%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@android:drawable/ic_menu_info_details"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:background="@drawable/group782"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:text="@{homeData.firstName}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toStartOf="@+id/divider2"
                        android:layout_weight="12"
                        android:drawablePadding="@dimen/dimen_4"
                        android:gravity="center_vertical|end"
                        android:text="Influencer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"
                        app:drawableStartCompat="@drawable/circular_bg_white_16" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_weight=".2"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toEndOf="@+id/divider2"
                        android:drawablePadding="@dimen/dimen_4"
                        android:gravity="center_vertical|start"
                        android:text="Level 6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"
                        app:drawableStartCompat="@drawable/circular_bg_white_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toStartOf="@+id/divider1"
                        android:layout_weight="12"
                        android:drawablePadding="@dimen/dimen_4"
                        android:gravity="center_vertical|end"
                        android:text="Total points"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"
                        app:drawableStartCompat="@drawable/ic_star" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_weight=".2"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_toEndOf="@+id/divider1"
                        android:drawableStart="@drawable/ic_group_692"
                        android:drawablePadding="@dimen/dimen_4"
                        android:gravity="center_vertical|start"
                        android:text="Total Reels:145"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:hint="Lorem Ipsum is simply dummy text of the printing and typesetting industry Lorem Ipsum has been the industry's standard dummy text"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="@{homeData.progressBarVisible}" />
        </FrameLayout>
    </ScrollView>
</layout>