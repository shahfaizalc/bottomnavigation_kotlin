<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homeData"
            type="com.reelme.app.viewmodel.UserProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:text="Edit Your Demographics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_gravity="center_vertical"
                        android:text="Profile Completed 100%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16"
                        android:textStyle="bold" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:background="@drawable/group782"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16" />

                <TextView
                    android:layout_marginStart="@dimen/dimen_16"
                    android:textColorHint="@color/colorBlacklight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/home_userSubTitle3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Influencer"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Add a bio to your profile"
                        android:textColor="@color/colorBlacklight"
                        android:textSize="@dimen/dimen_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Influencer"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Add a bio to your profile"
                        android:textColor="@color/colorBlacklight"
                        android:textSize="@dimen/dimen_16" />


                </LinearLayout>


                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:textColorHint="@color/colorBlacklight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/home_userSubTitle3"/>
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="@{homeData.progressBarVisible}" />
        </FrameLayout>
    </ScrollView>
</layout>