<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.akbhar.viewmodel.IntroViewModel" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="videosTextView"
            type="java.lang.String" />

        <variable
            name="titleTextView"
            type="java.lang.String" />

        <variable
            name="imgUrl"
            type="java.lang.String" />

        <variable
            name="imgUrlid"
            type="java.lang.Integer" />
        <variable
            name="typeTextView"
            type="java.lang.String" />

        <variable
            name="simpleListAdapter"
            type="com.guiado.akbhar.adapter.IntroChannelsRecyclerViewAdapter" />


        <variable
            name="itemClickListener"
            type="com.guiado.akbhar.listeners.IntroChannelEventListener" />

    </data>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:onClick="@{() -> itemClickListener.onClickYearListItem(mainDataModel,itemPosition)}"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:elevation="@dimen/dimen_2"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="@dimen/dimen_8"
            card_view:cardElevation="@dimen/dimen_4">

            <ImageView
                android:id="@+id/imges"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:maxLines="1"
            android:id="@+id/videoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{titleTextView}"
            android:textColor="@color/colorBlacklight"
            android:textStyle="bold" />
    </LinearLayout>
</layout>