<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.guiado.akbhar.viewmodel.IntroViewModel" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="videosTextView"
            type="java.lang.String" />

        <variable
            name="titleTextView"
            type="java.lang.String" />

        <variable
            name="imgUrl"
            type="java.lang.String" />

        <variable
            name="imgUrlid"
            type="java.lang.Integer" />
        <variable
            name="typeTextView"
            type="java.lang.String" />

        <variable
            name="simpleListAdapter"
            type="com.guiado.akbhar.adapter.IntroChannelsRecyclerViewAdapter" />


        <variable
            name="itemClickListener"
            type="com.guiado.akbhar.listeners.IntroChannelEventListener" />

    </data>

    <LinearLayout
        android:background="@drawable/circular_bg_border_black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:padding="@dimen/dimen_8"
        android:onClick="@{() -> itemClickListener.onClickYearListItem(mainDataModel,itemPosition)}"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imges"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="@dimen/dimen_16"
            android:maxLines="1"
            android:id="@+id/videoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{titleTextView}"
            android:textColor="@color/colorBlacklight" />
    </LinearLayout>
</layout>