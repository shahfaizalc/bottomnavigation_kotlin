            <TextView
                android:fontFamily="@font/futurastdbold"
                android:lineSpacingExtra="@dimen/dimen_12"
                android:layout_marginTop="@dimen/dimen_48"
                android:textSize="@dimen/dimen_32"
                android:padding="@dimen/dimen_16"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_fullnameTitle"
                 />

            <TextView
                android:fontFamily="@font/futubk"
                android:padding="@dimen/dimen_16"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_fullnameSubTitle"
                />

        <EditText
            android:fontFamily="@font/futubk"
            android:layout_marginTop="@dimen/dimen_24"
            android:textColor="@color/white"
            android:text="@={homeData.firstName}"
            android:maxLength="20"
            android:textSize="@dimen/dimen_36"
            android:layout_margin="@dimen/dimen_16"
            android:textColorHint="@color/colorBlacklight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/home_fullnameSubTitle2"/>

        <EditText
            android:fontFamily="@font/futubk"
            android:maxLength="20"
            android:textColor="@color/white"
            android:text="@={homeData.lastName}"
            android:textSize="@dimen/dimen_36"
            android:layout_margin="@dimen/dimen_16"
            android:textColorHint="@color/colorBlacklight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/home_fullnameSubTitle3"/>



        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/futurastdbold"
            android:layout_marginTop="@dimen/dimen_16"
            android:textColor="@color/smoke2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_12"
            android:paddingBottom="@dimen/dimen_12"
            android:paddingStart="@dimen/dimen_28"
            android:paddingEnd="@dimen/dimen_28"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@drawable/button_black"
            android:onClick="@{() -> homeData.signUpUserClicked()}"
            android:drawablePadding="@dimen/dimen_4"
            android:drawableEnd="@drawable/ic_rightarrow"
            android:text="Next" />


