<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainDataModel"
            type="com.reelme.app.viewmodel.DailyBonusReelsModel" />

        <variable
            name="countriesInfoModel"
            type="com.reelme.app.model_sales.goal.Record" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

        <variable
            name="simpleListAdapter"
            type="com.reelme.app.adapter.DailyBonusReelsAdapter" />

        <variable
            name="itemClickListener"
            type="com.reelme.app.listeners.DailyBonusReelsEventListener" />

        <variable
            name="keyWordsTag"
            type="java.lang.String" />
        <variable
            name="postDate"
            type="java.lang.String" />

    </data>


    <FrameLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="9">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/group_1355"
                android:layout_weight="4">


                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:padding="@dimen/dimen_16"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_swipe"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:text="Daily\nBonus\nReels"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_32" />


            </RelativeLayout>

            <ImageView
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:id="@+id/progressprofile"
                android:layout_marginStart="@dimen/dimen_48"
                android:layout_marginEnd="@dimen/dimen_48"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/group782"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/group_1355"
                android:layout_weight="4">


                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:fontFamily="@font/futurastdbold"
                    android:lineSpacingExtra="@dimen/dimen_12"
                    android:padding="@dimen/dimen_16"
                    android:text="Choose\nYour\nAdventures"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_32" />

                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_48"
                    android:padding="@dimen/dimen_16"
                    android:src="@drawable/ic_swipe_2"/>




            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

</layout>
