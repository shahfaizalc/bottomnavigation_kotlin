<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.faizal.bottomnavigation.viewmodel.RequestCompleteViewModel" />

        <variable
            name="profile"
            type="com.faizal.bottomnavigation.model2.Profile" />

        <variable
            name="address"
            type="java.lang.String" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_8"
                card_view:cardCornerRadius="@dimen/dimen_8"
                card_view:cardElevation="@dimen/dimen_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text="@{profile.name}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimen_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_8"
                        android:text="@{profile.address.locationname+`\n` + profile.address.streetName+ `,` +profile.address.locationname+ `\n` +profile.address.town+ `,` +profile.address.city}"
                        android:textColor="@color/colorBlacklight" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="About Me"
                            android:textColor="@color/colorBlacklight"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/showDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@{profile.desc}"
                            android:textColor="@color/colorBlacklight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@{profile.moreInformation}"
                            android:textColor="@color/colorBlacklight" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorWhite"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_4"
                        android:paddingEnd="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@{profile.keyWords.toString()}"
                        android:textColor="@color/colorBlacklight"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_4"
                        android:text="Contact"
                        android:textColor="@color/colorBlacklight"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_4"
                        android:text="@{profile.phone}"
                        android:textColor="@color/colorBlacklight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_4"
                        android:text="@{profile.email}"
                        android:textColor="@color/colorBlacklight" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Availability"
                            android:textStyle="bold" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="@{profile.availability}"
                            android:clickable="false"
                            android:scaleX=".5"
                            android:scaleY=".5" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate and Review Me"
                            android:textStyle="bold" />


                        <RatingBar
                            android:id="@+id/simpleRatingBar"
                            style="@style/Widget.AppCompat.RatingBar.Indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="@={mainDataModel.ratings}"
                            app:rating="@{mainDataModel}" />


                        <RelativeLayout
                            android:layout_marginBottom="@dimen/dimen_8"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_8"
                                android:layout_toLeftOf="@+id/postReview"
                                android:background="@drawable/circular_bg_border"
                                android:padding="@dimen/dimen_12"
                                android:text="@={mainDataModel.review}" />

                            <Button
                                android:id="@+id/postReview"
                                style="@style/Widget.AppCompat.Button.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circular_bg_border"
                                android:onClick="@{mainDataModel.updateReview()}"
                                android:text="post" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSmoke"
                        android:paddingStart="@dimen/dimen_32"
                        android:paddingEnd="@dimen/dimen_32"></View>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:paddingStart="@dimen/dimen_8"
                        android:paddingEnd="@dimen/dimen_8"
                        android:scrollbars="vertical"
                        app:searchRecycler="@{mainDataModel}" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</layout>
