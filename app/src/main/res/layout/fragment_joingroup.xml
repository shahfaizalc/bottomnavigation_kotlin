<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainDataModel"
            type="com.faizal.bottomnavigation.viewmodel.JoinGroupViewModel" />

        <variable
            name="countriesInfoModel"
            type="com.faizal.bottomnavigation.model2.Groups" />

    </data>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view:contentPadding="@dimen/dimen_8"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/dimen_4"
            card_view:cardElevation="@dimen/dimen_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={countriesInfoModel.postedByName}"
                        android:textColor="@color/colorBlacklight"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="@={mainDataModel.postedDate}" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/dimen_4"
                    android:layout_gravity="end"
                    android:drawableTint="@color/grey"
                    android:drawableLeft="@drawable/tag"
                    android:text="@={mainDataModel.keyWordsTagg}"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"

                    android:maxLines="7"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:layout_height="wrap_content"
                    android:text="@{countriesInfoModel.title}"
                    android:textColor="@color/colorBlacklight"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSmoke"
                    android:paddingStart="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_32" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8">


                    <TextView
                        android:layout_marginStart="@dimen/dimen_4"
                        android:layout_toEndOf="@+id/likethumb"
                        android:padding="@dimen/dimen_4"
                        android:onClick="@{mainDataModel.updateBookmarks()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dimen_4"
                        android:background="@{mainDataModel.bookmarkState ? @drawable/circular_bg_border_green : @drawable/circular_bg_border  }"
                        android:drawableStart="@{mainDataModel.bookmarkState ? @drawable/bookmark_green : @drawable/bookmark  }"
                        android:textColor="@{mainDataModel.bookmarkState ? @color/paleGreen : @color/colorGrey  }"
                        android:textStyle="bold"
                        android:text="@{mainDataModel.bookmarkState ? @string/saved : @string/save}" />



                     </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</layout>
