<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mainData"
            type="com.guiado.grads.viewmodel.LocationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_24">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Use your location"
            android:textSize="@dimen/dimen_16"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_logo"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Give us location access so we can choose the country that best suits your trip."></TextView>


        <Button
            android:id="@+id/useCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_8"
            android:background="@drawable/button_borderr"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:text="Allow"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/skipLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_8"
            android:background="@drawable/circular_bg"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:text="Skip"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</layout>