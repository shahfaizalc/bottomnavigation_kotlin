            android:name="com.guiado.akbhar.view.WebViewActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.guiado.akbhar.activities.LaunchActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>